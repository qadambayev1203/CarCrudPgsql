@model CarCrudPgsql.Models.Car

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Create</h2>

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">

    <div class="form-group">
        <label asp-for="@Model.companyName" class="form-label">Company Name</label>
        <input asp-for="@Model.companyName" placeholder="Company Name" type="text" class="form-control mb-3" />

        <label asp-for="@Model.carName" class="form-label">Car Name</label>
        <input asp-for="@Model.carName" placeholder="Car Name" type="text" class="form-control mb-3" />

        <label asp-for="@Model.price" class="form-label">Price</label>
        <input asp-for="@Model.price" placeholder="Price" type="number" class="form-control mb-3" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

</form>








