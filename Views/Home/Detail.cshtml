@model CarCrudPgsql.Models.Car

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Detail</h2>
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h1 class="card-title text-center" style=" margin-top: 0.32rem; font-size: 2.52rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Car</h1>
        <h2 class="card-subtitle mb-2 text-body-secondary text-center" style=" margin-top: 0.32rem; font-size: 1.9rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Car information</h2>
        <hr />
        <p style="font-size:20px"><b>Id:</b>  @Model.id</p>
        <p style="font-size:20px"><b>Company Name:</b>  @Model.companyName</p>
        <p style="font-size:20px"><b>Car Name:</b>  @Model.carName</p>
        <p style="font-size:20px"><b>Price:</b>  @Model.price $</p>
        <a asp-controller="Home" asp-action="Update" asp-route-Id="@Model.id" class="btn btn-warning" style="width:100px">Update</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>

