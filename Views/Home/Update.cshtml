@model CarCrudPgsql.Models.Car

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style=" margin-top: 0.32rem; font-size: 2rem; font-weight: 700; text-transform: capitalize; color: #05364d; ">Update</h2>

<form asp-controller="Home" asp-action="Update" method="post" class="mt-3">

    <div class="form-group">
        <label asp-for="@Model.companyName" class="form-label"></label>
        <input asp-for="@Model.companyName" value="@Model.companyName" type="text" class="form-control mb-3" />

        <label asp-for="@Model.carName" class="form-label"></label>
        <input asp-for="@Model.carName" value="@Model.carName" type="text" class="form-control mb-3" />

        <label asp-for="@Model.price" class="form-label"></label>
        <input asp-for="@Model.price" value="@((int)Model.price)" type="number" class="form-control mb-3" />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

</form>


